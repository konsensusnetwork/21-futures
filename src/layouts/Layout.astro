---
import BaseHead from "./BaseHead.astro";
import Footer from "../components/Footer.astro";

import type { Props as BaseHeadProps } from "./BaseHead.astro";

export interface Props {
  seo?: BaseHeadProps;
}

const { seo } = Astro.props;
---

<html lang="en" class="h-full">
  <head>
    <BaseHead {...seo} />
    <slot name="head-bottom" />
  </head>
  <body>
    <main class="main-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
    body {
      display: flex;
      flex-direction: column;
      min-height: 100vh; /* Ensure body takes full viewport height */
    }

    .main-content {
      flex: 1 0 auto; /* Allow main content to grow as needed, but don't let it shrink below its content's size */
    }

    footer {
      flex-shrink: 0; /* Don't let the footer shrink */
    }
</style>