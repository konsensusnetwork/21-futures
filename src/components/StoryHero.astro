<style>
     .hero-section {
    position: relative;
    width: 100%;
    height: 100vh;
    background-color: hsl(var(--color-theme-300)); /* Fallback background color */
    overflow: hidden;
  }

  .hero-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      rgba(0, 0, 0, 0.3),
      rgba(0, 0, 0, 0.4)
    ); /* Adjust the gradient for desired darkness */
    z-index: 1;
  }

  .hero-cta {
    position: absolute;
    bottom: 10%; /* Adjust this value to move the button up or down */
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
    padding: 10px 20px;
    font-size: 1.5rem;
    color: white;
    background-color: hsl(
      var(--color-theme-300)
    ); /* Adjust the background color */
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    transition: background-color 0.3s ease;

  }

    @media (max-width: 768px) {
        /* This is typically the breakpoint for tablets and below */
        .hero-section {
        height: 50vh; /* Reduce the height on mobile */
        }

        .hero-title {
        font-size: 2rem; /* Reduce font size */
        top: 40%; /* Adjust position */
        }

        .hero-subtitle {
        font-size: 1.2rem; /* Reduce font size */
        top: 50%; /* Adjust position */
        max-width: 50%; /* Adjust width */
        }

        .next-section {
        bottom: 10%; /* Adjust position */
        }
    }
</style>