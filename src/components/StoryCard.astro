---
import { Astro } from "astro/types";
interface StoryProps {
    slug: string;
  image: string;
  title: string;
  author: string;
}

const { slug, image, title, author }: StoryProps = Astro.props;
---

<!-- src/components/StoryCard.astro -->
<article class="story-card">
  <a href={`/stories/${slug}`} class="story-link">
    <img src={image} alt={title} />
    <h3>{title}</h3>
    <p>{author}</p>
  </a>
</article>

<style>
  .story-card {
    border: 1px solid #e5e5e5;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.2s;
  }

  .story-card:hover {
    transform: scale(1.05);
  }

  .story-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }

  .story-card h3 {
    padding: 16px;
    font-size: 1.5rem;
  }

  .story-card p {
    padding: 0 16px 16px;
    color: var(--color-theme-100);
  }
  .story-link {
    display: block;
    color: inherit; /* To ensure text color doesn't change */
    text-decoration: none; /* To remove the default underline */
  }
</style>

